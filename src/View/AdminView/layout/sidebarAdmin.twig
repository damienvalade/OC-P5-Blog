{# *** SideBar **** #}
{# **************** #}

<input type="checkbox" class="btn btn-link" id="menu-toggle">
<input type="checkbox" class="d-none" id="arrow-toggle">

<nav class="bg-emeraude sidebar" id="sidebar-wrapper">
    <div for="menu-toggle" id="test-sidebar">

        <div class="sidebar-heading text-center">
            <i class="fa fa-tachometer"></i>
        </div>

        <div class="sidebar-heading text-center">
            <a href="/admin/settings/{{ userId() }}" id="navbardrop">
                <img class="radius-50 icon-pp" src="{{ userImage() }}" alt="">
            </a>
        </div>

        <ul class="list-group list-group-flush">
            {% if userLevel() == 1 %}
                <li class="m-0 p-0">
                    <a href="/admin/users"
                       class="list-group-item list-group-item-action bg-light {{ currentUrl('side=admin&rubric=users') }}">
                        <i class="fa fa-user"></i>
                        <span class="arrow-hide">Utilisateur</span>
                    </a>
                </li>

                <li class="m-0 p-0">
                    <a href="/admin/mail/view"
                       class="list-group-item list-group-item-action bg-light {{ currentUrl('side=admin&rubric=mail&request=view') }}">
                        <i class="fa fa-envelope-o"></i>
                        <span class="arrow-hide">Home</span>
                    </a>
                </li>
                <li class="m-0 p-0">
                    <a href="/admin/administration"
                       class="list-group-item list-group-item-action bg-light {{ currentUrl('side=admin&rubric=administration') }}">
                        <i class="fa fa-bar-chart"></i>
                        <span class="arrow-hide">Dashboard</span>
                    </a>
                </li>
                <li class="m-0 p-0">
                    <a href="/admin/commentaries"
                       class="list-group-item list-group-item-action bg-light {{ currentUrl('side=admin&rubric=commentaries') }}">
                        <i class="fa fa-comment"></i>
                        <span class="arrow-hide">Commentaires</span>
                    </a>
                </li>
            {% endif %}
            {% if userLevel() <= 2 %}
                <li class="m-0 p-0">
                    <a href="/admin/articles"
                       class="list-group-item list-group-item-action bg-light {{ currentUrl('side=admin&rubric=articles') }}">
                        <i class="fa fa-files-o"></i>
                        <span class="arrow-hide">Articles</span>
                    </a>
                </li>
            {% endif %}
            <li class="m-0 p-0">
                <a href="/admin/settings/{{ userId() }}"
                   class="list-group-item list-group-item-action bg-light {{ currentUrl('side=admin&rubric=settings') }}">
                    <i class="fa fa-sliders"></i>
                    <span class="arrow-hide">Administatrion</span>
                </a>
            </li>
            <li class="m-0 p-0">
                <a href="/public/home" class="list-group-item list-group-item-action bg-light">
                    <i class="fa fa-home"></i>
                    <span class="arrow-hide">Home</span>
                </a>
            </li>

            <li>
                <label for="arrow-toggle" id="arrow-gen" class="wrapper-arrow">
                    <div id="arrow-top" class="arrow-line line-top"></div>
                    <div id="arrow-bot" class="arrow-line line-bot"></div>
                </label>
            </li>

        </ul>
    </div>
</nav>
