{% extends "/AdminView/layout/layoutAdmin.twig" %}

{% block titre %}Articles Manager{% endblock %}


{% block main %}

    <h2 class="text-center mb-5 mt-5 write-white"><span class="underline">A</span>rticles</h2>

    <div class="row d-flex justify-content-center mt-5 mb-5">
        <a href="/admin/articles/create" class="btn btn-emerauld text-center">Ajouter</a>
    </div>

    <div class="table-responsive-lg">
        <table class="table table-striped-emerald">
            <thead class="thead-emerald">
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Auteur</th>
                <th scope="col">Date Création</th>
                <th scope="col">Date modification</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for articles in articles %}
                <tr>
                    <th scope="row">{{ articles.nom_article }}</th>
                    <td>{{ articles.auteur_article }}</td>
                    <td>{{ articles.date_creation }}</td>
                    <td>{{ articles.date_maj }}</td>
                    <td>{{ articles.titre }}</td>
                    <td>
                        <a class="fa-text"
                           href="/admin/articles/update/{{ spaceReplace( articles.nom_article ) }}-{{ articles.id }}"><i
                                    class="fa fa-pencil-square-o"></i></a>
                        <a class="fa-text"
                           href="/public/articles/view/{{ spaceReplace(articles.nom_article) }}-{{ spaceReplace(articles.id) }}"><i
                                    class="fa fa-eye"></i></a>
                        <a class="fa-text" href="/admin/articles/delete/{{ articles.id }}"><i
                                    class="fa fa-times"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}