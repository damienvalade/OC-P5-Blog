{% extends "/AdminView/layout/layoutAdmin.twig" %}

{% block titre %}Administration{% endblock %}


{% block main %}

    <h2 class="text-center mb-5 mt-5 write-white"><span class="underline">U</span>tilisateurs</h2>

    <div class="row d-flex justify-content-center mt-5 mb-5">
        <a href="/admin/users/create" class="btn btn-emerauld text-center">Ajouter</a>
    </div>

    <div class="table-responsive-lg">
        <table class="table table-striped-emerald">
            <thead class="thead-emerald">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Identifiant</th>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">RÃ´le</th>
                <th scope="col">Articles</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for users in users %}
                <tr>
                    <th scope="row">{{ users.id }}</th>
                    <td><img class="icon-pp mr-4" src="{{ users.image }}">{{ users.username }}</td>
                    <td>{{ users.firstname }}</td>
                    <td>{{ users.email }}</td>
                    <td>{{ users.type }}</td>
                    <td>{{ users.articles }}</td>
                    <td>
                        <a class="fa-text"
                           href="/admin/users/update/{{ spaceReplace( users.username ) }}-{{ users.id }}"><i
                                    class="fa fa-pencil-square-o"></i></a>
                        <a class="fa-text" href="/admin/users/delete/{{ users.id }}"><i class="fa fa-times"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}